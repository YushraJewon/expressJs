head
  link(rel="stylesheet" href="/css/bootstrap.min.css")
  link(rel="stylesheet" href="/css/bootstrap-icons.css")

body(class="bg-light p-4")
  div(class="container text-center mb-3 fs-1") #{name}
  div(class="shadow-lg rounded-3 p-3")
    table(class="table table-borderless table-light table-hover align-middle")
      tr(class="table-success")
        th(class="fs-5") Name
        th(class="fs-5") Genre
        th(class="fs-5") Year
        th Edit
          
        each movie in movies
          tr
            td= movie.name
            td= movie.genre
            td= movie.year
            td
              button.btn.btn-primary(type="button")
                i.bi.bi-pencil
              